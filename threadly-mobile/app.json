{
  "expo": {
    "name": "threadly-mobile",
    "slug": "threadly-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF",
      "image": "./assets/splash-light.png",
      "dark": {
        "backgroundColor": "#121212",
        "image": "./assets/splash-dark.png"
      }
    },
    "scheme": "threadlymobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.shigivahan.threadlymobile"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "7d15b3e5-ec05-400f-bb06-8faae73b3d97"
      }
    }
  }
}
